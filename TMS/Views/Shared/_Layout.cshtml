<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <nav class="navbar navbar-dark bg-primary navbar-expand-lg fixed-top ps-5">
        <a class="navbar-brand">
            <i class="bi bi-journal"></i> Task Management System
        </a>
    </nav>

    @{
        var isLoginPage = ViewBag.Title != null && ViewBag.Title.ToString().Contains("Login");
    }

    @* Conditionally render container with different classes *@
    @if (isLoginPage)
    {
        <div class="container body-content pt-5 px-5 pb-4 w-75 mx-auto">
            @RenderBody()
            @Html.Partial("_Validation")
        </div>
    }
    else
    {
        <div class="container-fluid body-content pt-5 pb-4">
            @RenderBody()
            @Html.Partial("_Validation")
        </div>
    }


    <!-- Footer -->
    <footer class="bg-primary fixed-bottom w-100 text-center text-white py-2 mt-auto">
        © @DateTime.Now.Year IrayaWeb Inc. All rights reserved.
    </footer>
    @Scripts.Render("~/bundles/jquery")
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
