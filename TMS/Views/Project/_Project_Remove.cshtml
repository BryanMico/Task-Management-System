@model TMS.Models.ProjectViewModel

<div class="modal fade" id="projectRemoveModal-@Model.Id" tabindex="-1" aria-labelledby="projectRemoveModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Confirm Project Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the project <strong>@Model.Name</strong> (Project Code: <em>@Model.ProjectCode</em>)?</p>
            </div>
            <div class="modal-footer">
                @using (Html.BeginForm("Project_DeleteConfirmed", "Project", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.Hidden("id", Model.Id)
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                }
            </div>
        </div>
    </div>
</div>
